<h1>Tweets</h1>

<% if user_signed_in? %>

<div class="col-12 border border-warning p-3 mt-1">

    <%= render 'tweets/form', tweet: @tweet %>
</div>
<%end%>
<div class="col-12">
    <div class="row">
                <% @tweets.each do |tweet|%>
        <div class="col-12 border border-warning p-3 mt-1">
            <%= image_tag (tweet.user.photo_url), class:"avatar-in-tweet rounded"%>
            <hr>
            <%= tweet.content%>
            <%= tweet.likes.count%> <p>likes | 0 re-tweets</p>

        </div>

            <%end%>

        <div class="row mt-1">
            <%= paginate @tweets %>
        </div>
        
    </div>
</div>