<div class="row">
<h1 class="text-warning">Tweets</h1>

<% if user_signed_in? %>
    <div class="col-12 border border-warning p-3 mt-1">
        <%= render 'tweets/form', tweet: @tweet %>
    </div>
<%end%>

    <div class="w-100 m-2">
        <%= form_tag(root_path, method: :get) do %>
        <div class="form-group">
        <%= link_to "Limpiar", root_path, class: "btn btn-secondary text-warning float-right ml-2"%>
        <%= submit_tag "Buscar", class:"btn btn-warning text-muted float-right ml-2"%>
        <%= text_field_tag(:search, params[:search], class:"form-control d-inline float-right w-50")%>
        </div>
    </div>

        <%end%>
    </div>



    <div class="col-12">
        <div class="row">
            <% @tweets.each do |tweet|%>

            <%= render "shared/tweet_card", tweet: tweet%>
            

            <%end%>
        </div>

            <div class="row mt-1">
                <%= paginate @tweets %>
            </div>
            
        
    </div>